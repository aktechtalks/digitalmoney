<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="vertical"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.digitalmoney.home.ui.TaskReportActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewShareTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/nav_header_vertical_spacing">

            <TextView
                android:id="@+id/tvTotalImpression"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/task_total_impression"
                android:drawableLeft="@drawable/ic_brightness"
                android:gravity="center"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvTotalCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="@string/default_counter"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:background="@color/colorWhite"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:padding="@dimen/nav_header_vertical_spacing">

            <TextView
                android:id="@+id/tvSuccessImpression"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/task_success_impression"
                android:drawableLeft="@drawable/ic_brightness"
                android:gravity="center"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvSuccessImpressionCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="@string/default_counter"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:background="@color/colorWhite"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:padding="@dimen/nav_header_vertical_spacing">

            <TextView
                android:id="@+id/tvInstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/task_install"
                android:drawableLeft="@drawable/ic_brightness"
                android:gravity="center"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvInstallCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="@string/default_counter"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:background="@color/colorWhite"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:padding="@dimen/nav_header_vertical_spacing">

            <TextView
                android:id="@+id/tvSuccessInstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/task_success_install"
                android:drawableLeft="@drawable/ic_brightness"
                android:gravity="center"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:textAppearanceMedium"/>

            <TextView
                android:id="@+id/tvSuccessInstallCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textAppearance="?android:textAppearanceLarge"
                android:text="@string/default_counter"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:background="@color/colorWhite"/>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnInstall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_start"
            android:textColor="@color/colorWhite"
            android:background="@drawable/circle_background"
            android:layout_marginTop="30sp"/>
    </LinearLayout>



        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewShareBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            android:layout_alignParentBottom="true"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>



</LinearLayout>
